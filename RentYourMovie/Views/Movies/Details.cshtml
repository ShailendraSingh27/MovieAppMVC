@model RentYourMovie.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<b>Genre: </b>@Model.Genre<br />
<b>Release Date: </b>@Model.ReleaseDate.DayOfWeek, @Model.ReleaseDate.ToLongDateString()<br />
<b>Date Added: </b>@Model.DateAdded.DayOfWeek, @Model.DateAdded.ToLongDateString()<br />
<b>Stock: </b>@Model.NumberInStock<br />

