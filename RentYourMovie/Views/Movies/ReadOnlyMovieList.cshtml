@model IEnumerable<RentYourMovie.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Movies</h3>

<table id="movies" class="table table-bordered table-hover" >
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
            
        </tr>
    </thead>
    
    <tbody>
      
    </tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            //calling DataTable
            var dataTable = $("#movies").DataTable
            ({
                ajax:
                {
                    url: "/api/movies",
                    dataSrc:""
                },
                columns:
                [
                    {
                        data: "name"
                    },
                    {
                        data:"genre.name"
                    }
                    
                ]
            });


        });
    </script>
}