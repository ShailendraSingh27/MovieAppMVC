@model IEnumerable<RentYourMovie.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Movies</h3>
@Html.ActionLink("New Movie", "NewMovieForm", "Movies", new { @class = "btn btn-primary" })
<table id="movies" class="table table-bordered table-hover" >
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.ActionLink(item.Name, "Edit", "Movies", new { id = item.Id }, null)</td>
                <td>@item.Genre.Name</td>
            </tr>
        }
    </tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function ()
        {
            //calling DataTable
            var dataTable = $("#movies").DataTable();
        });
    </script>
}